@model MyApplication1.Models.Todo
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("CreateTodo", "Todo"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Progress)
        @Html.TextBoxFor(m => m.Progress, new { @class = "form-control", @type = "number", @min = "0", @max = "100" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Duedate)
        @Html.TextBoxFor(m => m.Duedate, new { @class = "form-control", @type = "date" })
    </div>
}
